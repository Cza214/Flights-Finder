{% extends('base.html.twig') %}
{% block head %}
    {{ asset('js/formplus.js') }}
{% endblock %}
{% block form %}
    <header class="">
        <div class="container">
            <div class="row" style="">
                <div class="col-lg-5 text-center" style=" padding: 10px; background-color: rgba(82, 85, 86, 0.40)">
                    <form>
                        <div class="form-group">
                            <input class="form-control departure_input" type="text" maxlength="3" minlength="3" placeholder="Departure" name="departure" required autofocus/>
                        </div>
                        <div class="form-group">
                            <input class="form-control arrival_input" type="text" maxlength="3" minlength="3" placeholder="Arrival" name="arrival" required/>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input type_radio" type="radio" name="type" value="1" checked/>
                                One Way
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input type_radio" type="radio" name="type" value="2">
                                Return
                            </label>
                        </div>
                        <div class="form-group-inline">
                            <input type="date" name="date" class="form-control date_input" required/>
                            <input type="date" name="dateBack" class="form-control date_return_input" disabled>
                        </div>
                        <hr>
                        <div class="form-group">
                            <button class="btn btn-dark find_button">Find</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
{% endblock %}